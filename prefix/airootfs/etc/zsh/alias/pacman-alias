#!/usr/bin/env zsh
# https://wiki.archlinux.org/index.php/Pacman_Tips
alias install-package='sudo pacman -S --needed'
alias update-upgrade='sudo pacman -Syu'
alias update-repository='sudo pacman -Sy'
alias remove-package='sudo pacman -Rs'
alias remove-package-n-configuration='sudo pacman -Rns'
alias search-package='pacman -Ss'
alias update-files-database='sudo pacman -Fy'
alias search-files-database='pacman -F'
alias info-package='pacman -Si'
alias search-installed-package='pacman -Qs'
alias info-installed-package='pacman -Qi'
alias list-installed-packages-from-aur='pacman -Qm'
alias list-installed-packages-from-repository='pacman -Qn'
alias list-installed-packages-explicitly='pacman -Qe'
alias list-installed-packages-nolonger-needed='pacman -Qdtq'
alias clear-pacman-log='rm -v /var/log/pacman.log'
